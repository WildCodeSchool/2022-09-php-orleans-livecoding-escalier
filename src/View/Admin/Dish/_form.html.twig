<form action="" method="POST" class="form">
    {% if errors %}
        <ul class="alert alert-danger list-unstyled">
            {% for error in errors %}
                <li>{{ error }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    <label class="form-label" for="title">Nom du plat</label>
    <input value="{{ dish.title ?? '' }}" class="form-control" type="text" id="title" name="title" placeholder="raclette" required="required">
        <label class="form-label mt-3" for="price">Prix</label>
        <input value="{{ dish.price ?? '' }}" class="form-control" type="number" step="0.1" id="price" name="price" placeholder="15â‚¬" required="required">
            <label class="form-label mt-3" for="description">Description</label>
            <input value="{{ dish.description ?? '' }}" class="form-control" type="text" id="description" name="description" placeholder="du fromage et des patates" required="required">

                <button class="mt-3 btn btn-success">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                    </svg>
                    {{ button_label|default('Ajouter un plat') }}
                </button>
            </form>
