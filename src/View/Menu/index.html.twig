{% extends 'layout.html.twig' %}
{% block stylesheet %}
	<link rel="stylesheet" href="assets/css/menu.css">
{% endblock %}
{% block content %}
	<h1 class="mt-5">Notre menu</h1>
	<main class="container-fluid">
		<ul class="w-50">
			{% for categoryTitle in categoryTitles %}
				<h2>{{ categoryTitle }}</h2>
				{% for dish in dishes|filter(dish => dish.category_title==categoryTitle) %}
					<li class="m-3 d-flex justify-content-between">
						<div>{{ dish.title }}</div>
						<div>{{ dish.price }}â‚¬</div>
						<img src="{{ dish.image is null ? '/assets/images/dish_placeholder.webp' : 'uploads/' ~ dish.image }}" alt="image de {{ dish.title }}">
					</li>
				{% endfor %}
			{% endfor %}

		</ul>
	</main>

{% endblock %}
